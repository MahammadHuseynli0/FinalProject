@using NanoNexus.Business.DTOs.ProductDTOs
@model List<ProductGetDTO>
@{
    int counter = 1;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-action="index" asp-controller="Product" class="btn btn-primary">Index</a>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">ImageUrl</th>
                        <th scope="col">CategoryName</th>
                        <th scope="col">ProductColor</th>
                        <th scope="col">BrandName</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td><img src="~/uploads/products/@item.ProductImages?.Where(x => x.IsPoster == true).FirstOrDefault()?.ImageUrl" width="100" height="100" /></td>
                            <td>@item.Category.Name</td>
                            <td>@item.ProductColor.Name</td>
                            <td>@item.Brand.Name</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger item-delete">Delete</a>
                                <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-info">Return</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
