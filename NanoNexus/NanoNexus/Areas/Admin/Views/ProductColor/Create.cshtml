@using NanoNexus.Business.DTOs.PoductColorDTOs
@model ProductColorCreateDTO
<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">HexCode</label>
                    <input asp-for="HexCode" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="HexCode" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="index" asp-controller="ProductColor" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>
