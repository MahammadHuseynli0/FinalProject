@using NanoNexus.Core.EnumForCore
@using NanoNexus.Core.Models
@model List<Order>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
@{
    int counter = 1;
}

<br />
<br />
<br />
<br />
<br />
<br />
<br />

<div class="container" style="border: 1px solid #000; min-height:50vh;">
    <h1>Orders: </h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Order Id</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Created Date</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(counter++)</th>
                    <td>@item.Id</td>
                    <td>@item.TotalPrice  AZN</td>
                    <td>@item.CreatedDate.ToString("MMM dd, yyyy H:mm:ss")</td>
                    <td>
                        <span class="badge text-white text-bg-@(item.OrderStatus == OrderStatus.Pending ?
                "secondary" : item.OrderStatus == OrderStatus.Accepted ? "success" : "danger")" style="padding: 0.4rem 0.8rem;
            font-size:16px ">@item.OrderStatus</span>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


